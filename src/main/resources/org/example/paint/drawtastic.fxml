<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.paint.controller.DrawtasticController"
            prefHeight="800.0" prefWidth="800.0">

  <top>
    <VBox>
      <MenuBar>
        <Menu text="File">
          <MenuItem text="Save" onAction="#onSave" />
          <MenuItem text="Exit" onAction="#onExit" />
        </Menu>
      </MenuBar>

      <ToolBar>
        <HBox spacing="20" alignment="TOP_CENTER">
          <!-- Erste Spalte (Pinsel, Farben) -->
          <VBox spacing="10">
            <Label text="Pens" />
            <HBox spacing="10">
              <SplitMenuButton fx:id="pensButton">
                <tooltip>
                  <Tooltip text="Selection of Pens" />
                </tooltip>
                <graphic>
                  <ImageView fitWidth="24" fitHeight="24" preserveRatio="true" smooth="false">
                    <Image url="@buttonIcons/pen.png" />
                  </ImageView>
                </graphic>
                <items>
                  <MenuItem fx:id="penButton" text="Pencil" />
                  <MenuItem fx:id="markerButton" text="Marker" />
                  <MenuItem fx:id="blurButton" text="Blur" />
                  <MenuItem fx:id="paintBrushButton" text="Pain Brush" />
                  <MenuItem fx:id="fountainPenButton" text="Fountain Pen" />
                  <MenuItem fx:id="rainbowPenButton" text="Rainbow Pen" />
                </items>
              </SplitMenuButton>
              <ColorPicker fx:id="colorPicker" prefWidth="40" />
            </HBox>
            <TextField fx:id="brushSize" text="6" prefWidth="40" />
            <VBox spacing="10" alignment="CENTER" style="-fx-background-color: lightblue;">
              <Label fx:id="opacityLabel" text="Opacity" />
              <Slider fx:id="opacitySlider" max="1.0" value="1.0" min="0.0" blockIncrement="0.1" prefWidth="100" />
            </VBox>
          </VBox>

          <!-- Trennlinie zwischen Spalten -->
          <Separator orientation="VERTICAL" />

          <!-- Zweite Spalte (Pens, Repaint, Tools) -->
          <VBox spacing="10">
            <Label text="Tools" />
            <Button fx:id="repaintButton" text="Repaint" />
            <Button fx:id="paintBucketButton" text="Paint Bucket" />
            <Button fx:id="eraserButton" text="Eraser" />
            <Button fx:id="selectAndMoveButton" text="Select and move" />
            <Button fx:id="connectedSelectAndMoveButton" text="Connected select and move" />
            <Button fx:id="pipetteButton" text="Pipette" />
          </VBox>

          <!-- Trennlinie zwischen Spalten -->
          <Separator orientation="VERTICAL" />

          <!-- Dritte Spalte (Hintergrund, Filter, Sonstiges) -->
          <VBox spacing="10">
            <Label text="Background &amp; Effects" />
            <Button fx:id="deleteColorButton" text="Delete Color Pipette" />
            <HBox spacing="10" alignment="CENTER_LEFT">
              <Label text="Background color:" />
              <ColorPicker fx:id="backgroundColorPicker" prefWidth="40"/>
              <Button fx:id="transparentBackgroundButton" text="None" />
            </HBox>
            <Button fx:id="encryptButton" text="Encrypt" />
            <Button fx:id="decryptButton" text="Decrypt" />
          </VBox>

          <!-- Trennlinie zwischen Spalten -->
          <Separator orientation="VERTICAL" />

          <!-- Vierte Spalte (Shapes, Text) -->
          <VBox spacing="10">
            <Label text="Shapes" />
            <SplitMenuButton fx:id="lineButton" text="Insert Line">
              <items>
                <MenuItem fx:id="rectangleButton" text="Insert Rectangle" />
                <MenuItem fx:id="circleButton" text="Insert Circle" />
                <MenuItem fx:id="ellipseButton" text="Insert Ellipse" />
                <MenuItem fx:id="starButton" text="Insert Star" />
                <MenuItem fx:id="arrowButton" text="Insert Arrow" />
              </items>
            </SplitMenuButton>
            <SplitMenuButton fx:id="insertPicture" text="Insert Picture">
              <items>
                <MenuItem fx:id="removeRedEyeButton" text="Remove red eyes" />
                <MenuItem fx:id="blurFilterButton" text="Blur Filter" />
                <MenuItem fx:id="blackAndWhiteFilterButton" text="Black and White Filter" />
              </items>
            </SplitMenuButton>
            <Button fx:id="textFieldButton" text="Textfield" />
          </VBox>

          <Separator orientation="VERTICAL" />

          <!-- FÃ¼nfte Spalte (Noch zuzuordnen) -->
          <VBox spacing="10">
            <Label text="Diverses" />
            <Button fx:id="undoButton" text="Undo" />
            <Button fx:id="redoButton" text="Redo" />
          </VBox>

        </HBox>
      </ToolBar>
    </VBox>
  </top>

  <center>
    <StackPane>
      <Canvas fx:id="canvas" width="6000" height="6000" />
      <Canvas fx:id="overlayCanvas" width="6000" height="6000" pickOnBounds="false" mouseTransparent="true" />
    </StackPane>
  </center>

</BorderPane>


