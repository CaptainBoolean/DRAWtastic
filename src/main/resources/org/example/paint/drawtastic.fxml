<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.paint.controller.DrawtasticController"
            prefHeight="800.0" prefWidth="800.0">

  <top>
    <VBox>
      <MenuBar>
        <Menu text="File">
          <MenuItem text="Save" onAction="#onSave" />
          <MenuItem text="Exit" onAction="#onExit" />
        </Menu>
      </MenuBar>

      <ToolBar>
        <VBox spacing="5">
          <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="brushSize" text="6" prefWidth="40" />

            <ColorPicker fx:id="colorPicker" />
            <Button fx:id="pipetteButton" text="Pipette" />

            <SplitMenuButton  fx:id="pensButton" text="Pens" >
              <tooltip>
                <Tooltip text="Selection of Pens" />
              </tooltip>

              <graphic>
                <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                  <Image url="@buttonIcons/chookity.jpg" />
                </ImageView>
              </graphic>
              <items>
                <MenuItem fx:id="penButton" text="Pencil" />
                <MenuItem fx:id="markerButton" text="Marker" />
                <MenuItem fx:id="blurButton" text="Blur" />
                <MenuItem fx:id="paintBrushButton" text="Pain Brush" />
                <MenuItem fx:id="fountainPenButton" text="Fountain Pen" />
                <MenuItem fx:id="rainbowPenButton" text="Rainbow Pen" />

              </items>
            </SplitMenuButton >

            <Button fx:id="eraserButton" text="Eraser" />


            <Button fx:id="selectAndMoveButton" text="Select and move" />
            <Button fx:id="connectedSelectAndMoveButton" text="Connected select and move" />







            <Button fx:id="deleteColorButton" text="Delete Color Pipette" />

            <VBox spacing="10" alignment="CENTER">
                  <Label fx:id="opacityLabel" text="Opacity" />
                  <Slider fx:id="opacitySlider" max="1.0" value="1" />
            </VBox>

          </HBox>

          <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Background color:" />
            <ColorPicker fx:id="backgroundColorPicker" />
            <Button fx:id="transparentBackgroundButton" text="Make Background transparent" />
          </HBox>

          <HBox>
            <Button text="Line Tool" />

            <Button text="Circle Tool" />
            <Button fx:id="rectangleButton" text="Rectangle" />
          </HBox>

          <HBox>
            <Button fx:id="insertPicture" text="Picture" />
            <Button fx:id="removeRedEyeButton" text="Remove red eyes" />
          </HBox>

          <HBox>
            <Button fx:id="textFieldButton" text="Textfield" />
          </HBox>
        </VBox>
      </ToolBar>

    <VBox>
      <Button fx:id="undoButton" text="Undo" />
      <Button fx:id="redoButton" text="Redo" />
    </VBox>




    </VBox>
  </top>

  <center>
    <StackPane>
      <Canvas fx:id="canvas" width="6000" height="6000" />
      <Canvas fx:id="overlayCanvas" width="6000" height="6000" pickOnBounds="false" mouseTransparent="true" />
    </StackPane>
  </center>


</BorderPane>
